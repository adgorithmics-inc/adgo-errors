{
    "compilerOptions": {
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "lib": ["dom", "es7"],
        "declaration": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
